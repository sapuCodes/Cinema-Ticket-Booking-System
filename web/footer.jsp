    <script>
const privacyLink = document.getElementById('privacy-link');
const refundLink = document.getElementById('refund-link');
const termsLink = document.getElementById('terms-link');

const privacyModal = document.getElementById('privacy-modal');
const refundModal = document.getElementById('refund-modal');
const termsModal = document.getElementById('terms-modal');

const privacyClose = document.getElementById('privacy-close');
const refundClose = document.getElementById('refund-close');
const termsClose = document.getElementById('terms-close');

// Event listeners for opening modals
privacyLink.addEventListener('click', () => {
    privacyModal.style.display = "block";
});

refundLink.addEventListener('click', () => {
    refundModal.style.display = "block";
});

termsLink.addEventListener('click', () => {
    termsModal.style.display = "block";
});

// Event listeners for closing modals
privacyClose.addEventListener('click', () => {
    privacyModal.style.display = "none";
});

refundClose.addEventListener('click', () => {
    refundModal.style.display = "none";
});

termsClose.addEventListener('click', () => {
    termsModal.style.display = "none";
});

// Close modals if the user clicks outside of the modal content
window.addEventListener('click', (event) => {
    if (event.target === privacyModal) {
        privacyModal.style.display = "none";
    }
    if (event.target === refundModal) {
        refundModal.style.display = "none";
    }
    if (event.target === termsModal) {
        termsModal.style.display = "none";
    }
});

    </script>
